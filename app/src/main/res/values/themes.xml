<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GASEApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="actionModeBackground">@color/teal_200</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.GASEApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.GASEApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="actionModeBackground">@color/teal_200</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.GASEApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="actionModeBackground">@color/teal_200</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="Theme.GASEApp.PopupOverlay.Dialog" parent="ThemeOverlay.AppCompat.Light" >
        <item name="actionModeBackground">@color/teal_200</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="LargeTextTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="LargeBoldTextTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="MediumTextTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="MediumBoldTextTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="SmallTextTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <style name="SmallBoldTextTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="MyTextViewStyleBlue" parent="MyTextViewStyle">
        <item name="android:textColor">#3a7eba</item>
    </style>

    <style name="TextDefault">
        <item name="font">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="TextLabelDefault">
        <item name="font">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLabelDefault</item>
    </style>

    <style name="TextInputDefault">
        <item name="font">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="hintTextColor">@color/colorTextHintDefault</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="font">@font/poppins_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAccent">
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="font">@font/poppins_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonPrimarySquare">
        <item name="android:background">@drawable/bg_button_primary_square</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="font">@font/poppins_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="font">@font/poppins_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSquare">
        <item name="android:background">@drawable/bg_button_square</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="font">@font/poppins_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
<!--        <item name="android:textStyle">italic</item>-->
        <item name="android:textSize">18sp</item>
<!--        <item name="android:textColor">#FFFFFF</item>-->
    </style>

</resources>